{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "eol-last": 2,
    //"jsx-quotes": 1,
    "no-console": 0,
    "no-use-before-define": 0, // TODO: apply this
    //"quotes": [1, "single"],
    //"react/jsx-no-undef": 1,
    //"react/jsx-uses-react": 1,
    //"react/jsx-uses-vars": 1,
    //"strict": 0,
    "comma-dangle": [0, "always-multiline"],
    "no-unused-vars": 0, // TODO: apply this
  }
}
