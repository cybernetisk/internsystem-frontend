{
  "extends": [
    "config:base"
  ],
  "masterIssue": true,
  "lockFileMaintenance": {
    "automerge": true,
    "automergeType": "branch",
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "eslint",
      "packagePatterns": [
        "eslint"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "webpack-loaders",
      "packagePatterns": [
        "-loader$"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "webpack",
      "packagePatterns": [
        "^webpack",
        "webpack-plugin$"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "babel",
      "packagePatterns": [
        "^@babel/"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "updateTypes": ["patch"],
      "automerge": true
    }
  ],
  "pin": {
    "automerge": true
  }
}
